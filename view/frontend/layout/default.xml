<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="WaPoNe_CookieNotification::css/cookienotification.css"/>
    </head>
    <body>
        <referenceContainer name="after.body.start">
            <block name="wapone_cookienotification"
                   template="WaPoNe_CookieNotification::cookienotification.phtml">
                <arguments>
                    <argument xsi:type="object" name="details">
                        WaPoNe\CookieNotification\ViewModel\CookieDetails
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
